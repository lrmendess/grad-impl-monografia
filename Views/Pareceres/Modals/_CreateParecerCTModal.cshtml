@model SCAP.ViewModels.ParecerViewModel

<form method="post" enctype="multipart/form-data" asp-controller="Pareceres" asp-action="Create">
    <div class="modal-header">
        <h5 class="modal-title">Emitir parecer do CT</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <vc:summary></vc:summary>
        <input type="hidden" asp-for="AfastamentoId" />
        <div class="form-group">
            <label asp-for="Julgamento" class="control-label"></label><br />
            <input type="radio" asp-for="Julgamento" value="1" /> Favorável<br />
            <input type="radio" asp-for="Julgamento" value="2" /> Desfavorável<br />
            <span asp-validation-for="Julgamento" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="DocumentoParecer.AfastamentoId" />
        <div class="form-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="new-parecer-doc" asp-for="DocumentoParecer.File" />
                <label data-browse="Procurar" class="custom-file-label" for="new-parecer-doc">Selecione um arquivo</label>
                <span asp-validation-for="DocumentoParecer.File" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Cancelar" />
        <input type="submit" class="btn btn-primary" value="Emitir" />
    </div>
</form>
