@model SCAP.ViewModels.AfastamentoViewModel

<form asp-controller="Afastamentos" asp-action="EncaminharAfastamento">
    <div class="modal-header">
        <h5 class="modal-title">Definir relator</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <vc:summary></vc:summary>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="SolicitanteId" />
        <div class="form-group">
            <label asp-for="RelatorId" class="control-label"></label>
            <select id="select-relator"
                    class="form-control"
                    asp-for="RelatorId"
                    asp-items="ViewBag.RelatorId" disabled="@ViewBag.SelectDisabled"></select>
            <span asp-validation-for="RelatorId" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Cancelar" />
        <input type="submit" class="btn btn-primary" value="Salvar" disabled="@ViewBag.SelectDisabled"/>
    </div>
</form>
