@model SCAP.ViewModels.UserViewModel

<form asp-controller="Users" asp-action="Delete">
    <div class="modal-header">
        <h5 class="modal-title">Excluir @Model.Nome @Model.Sobrenome</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <vc:summary></vc:summary>
        <p class="text-danger m-0">Tem certeza que deseja excluir este usuário?</p>
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="modal-footer">
        <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Cancelar"/>
        <input type="submit" class="btn btn-danger" value="Excluir"/>
    </div>
</form>
